{
  "openapi": "3.1.0",
  "info": {
    "title": "Despesas.com - API REST",
    "description": "Este é um projeto que implementa uma API REST em Node.js para gerenciar despesas de usuários, com funcionalidades de autenticação de usuário, CRUD de despesas, validações de entrada e restrições de acesso.",
    "version": "1.0.7",
    "contact": {
      "name": "Gleydiston Bragança",
      "email": "gleydiston35@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333/",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "paths": {
    "/signin": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Cadastra um novo usuário",
        "description": "Cadastra um novo usuário no sistema",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SigninSchema"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User created successfully"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Usuário já cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User already exists"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno no servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Autentica um usuário",
        "description": "Autentica um usuário e retorna um token de acesso",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "any_uuid"
                        },
                        "name": {
                          "type": "string",
                          "example": "*********"
                        },
                        "email": {
                          "type": "string",
                          "example": "teste@teste.com"
                        }
                      }
                    },
                    "token": {
                      "type": "string",
                      "example": "any_jwt_token"
                    },
                    "refreshToken": {
                      "type": "string",
                      "example": "any_refresh_token"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado ou usuário não existe",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email or password incorrect."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno no servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unexpected error."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/refresh": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Renova um token de acesso",
        "description": "Renova um token de acesso com um token de atualização",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "refreshToken": {
                    "type": "string",
                    "example": "any_refresh_token"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token renovado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "any_jwt_token"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token de atualização inválido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid refresh token or expired"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Token de atualização não fornecido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Refresh token is required"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno no servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unexpected error."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SigninSchema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "teste@teste.com"
          },
          "password": {
            "type": "string",
            "example": "123456"
          },
          "name": {
            "type": "string",
            "example": "Tom Santos"
          }
        }
      },
      "LoginSchema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "teste@teste.com"
          },
          "password": {
            "type": "string",
            "example": "123456"
          }
        }
      }
    }
  }
}